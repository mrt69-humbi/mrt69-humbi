#define BLYNK_TEMPLATE_ID "TEMPLATE_ID"
#define BLYNK_DEVICE_NAME "DEVICE_NAME"
#define BLYNK_AUTH_TOKEN "AUTH_TOKEN"

#include <ESP8266WiFi.h>
#include <BlynkSimpleEsp8266.h>

char auth[] = "5Hq6JvB1Dl2MioBkiKI5O8E37HwU9h2I";

// Your WiFi credentials.
char ssid[] = "RAJU ";
char pass[] = "Rifat...com.ff99";

BLYNK_WRITE(V0)
{
  // Room Light
  int value = param.asInt();

  Serial.println(value);
  if(value == 1)
  {
    Serial.println("ON");
    digitalWrite(D0, LOW);
  }
  if(value == 0)
  {
    Serial.println("OFF");
    digitalWrite(D0, HIGH);    
  }

}

BLYNK_WRITE(V1)
{
  // Stair Light
  int value = param.asInt();

  Serial.println(value);
  if(value == 1)
  {
    Serial.println("ON");
    digitalWrite(D1, LOW);
  }
  if(value == 0)
  {
    Serial.println("OFF");
    digitalWrite(D1, HIGH);    
  }
}

void setup()
{
  // Debug console
  Serial.begin(115200);

  Blynk.begin(auth, ssid, pass);
  
  pinMode(D0, OUTPUT);
  digitalWrite(D0, HIGH);

   pinMode(D1, OUTPUT);
  digitalWrite(D1, HIGH);
}

void loop()
{
  Blynk.run();
}
